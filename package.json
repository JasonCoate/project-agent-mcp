{
  "name": "project-agent",
  "version": "1.0.0",
  "description": "AI Project Management Agent with MCP and N8N",
  "scripts": {
    "setup": "./scripts/setup.sh",
    "start": "./scripts/start.sh",
    "dev": "./scripts/dev.sh",
    "build": "tsc && cd mcp-server && npm run build",
    "build:clients": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist coverage .nyc_output && cd mcp-server && rm -rf dist",
    "test": "cd tests/mcp-tools && node test-all-tools-comprehensive.js",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "cd tests/integration && npx ts-node test-comprehensive.ts",
    "test:mcp-server": "cd mcp-server && npm test",
    "test:mcp-tools": "cd tests/mcp-tools && node test-all-tools-comprehensive.js",
    "test:clients": "npm run build:clients && node dist/clients/universal-mcp-client.js",
    "test:n8n": "npm run build:clients && node dist/clients/n8n-integration-demo.js",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:mcp-server && npm run test:mcp-tools",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .ts,.js --fix",
    "lint:check": "eslint . --ext .ts,.js",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\"",
    "deps:check": "npm outdated",
    "deps:update": "npm update",
    "security:audit": "npm audit",
    "security:fix": "npm audit fix",
    "deploy": "docker-compose up -d",
    "deploy:build": "docker-compose build",
    "deploy:logs": "docker-compose logs -f",
    "deploy:stop": "docker-compose down",
    "docs:serve": "npx http-server docs -p 8080",
    "precommit": "npm run lint:check && npm run type-check && npm run test:coverage",
    "prepare": "npm run build",
    "postinstall": "cd mcp-server && npm install"
  },
  "keywords": [
    "mcp",
    "n8n",
    "project-management",
    "ai"
  ],
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.19.9",
    "@types/semver": "^7.5.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "http-server": "^14.1.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "semver": "^7.7.2",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.3.0"
  }
}
